term xterm-color
hardstatus alwayslastline
hardstatus string '%{= y}[%{b}%H%{y}]%= %{=y}%?%-Lw%?%{y}(%{B}%n*%f%t%?(%u)%?%{y})%{y}%?%+Lw%?%?%= %{y}[%{b}%c%{y}]'
startup_message off
defscrollback 5000
chdir "$HOME/odoo"

# Default screens
screen -t "server" 0
stuff "vagrant up ^M"
screen -t code0  1
stuff "cd ls_addons ^M"
screen -t code1  2
stuff "cd ls_addons ^M"
screen -t code3  3
stuff "cd ls_addons ^M"
screen -t layout  4
screen -t css  5
screen -t search0  6
