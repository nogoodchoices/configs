screen -t MO! 8
stuff "cd log; tailf openerp.log ^M"

# Bind region up/down to keys
bind j focus up
bind k focus down
# Bind region setup to a key
bind o eval split split 'resize 55' focus 'resize 55' 'select 2' focus 'select 0'

